<Window x:Class="TreeVisualisation.Visualisation.TreeVisualiser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeVisualisation"
        mc:Ignorable="d"
        Title="Tree Visualization" Height="450" Width="800">

    <Border BorderBrush="Black" BorderThickness="10">
        <Grid Background= "Bisque">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Canvas Grid.Row="0" Name="mainCanvas" Margin="10" Background="Transparent" ZIndex="10">
                <Canvas.RenderTransform>
                    <MatrixTransform x:Name="mt"/>
                </Canvas.RenderTransform>
            </Canvas>
            <TextBlock Grid.Row="1" Text="TEST TEST TEST TEST TEST HELP OH GOD" FontSize="20" FontStyle="Italic"/>
        </Grid>
    </Border>
</Window>
