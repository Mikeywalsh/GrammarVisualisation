<Window x:Class="WpfTreeVisualisation.TreeVisualiser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTreeVisualisation"
        mc:Ignorable="d"
        Title="Tree Visualization" Height="450" Width="800">

    <Grid Background="Bisque">
        <Canvas Name="mainCanvas" Margin="10" Background="Bisque" ZIndex="-1">
            <Canvas.RenderTransform>
                <MatrixTransform x:Name="mt"/>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
